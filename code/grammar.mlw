module Grammar

  use option.Option

  type id
  type state = id -> option int

  type aexpr =
       | Acst int
       | Avar id
       | Asub aexpr aexpr

  type bexpr =
       | Btrue
       | Bfalse
       | Bleq aexpr aexpr

  type stmt =
       | Sskip
       | Sass id aexpr
       | Sseq stmt stmt

  type prog = stmt

end
